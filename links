  <script>
    /* ---------- Fancy AF Pollen Particles ---------- */
    (function(){
      const c = document.getElementById('pollen');
      const ctx = c.getContext('2d', { alpha: true });
      let w, h, dpr, particles = [], running = true;

      const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (prefersReduced) { c.remove(); return; }

      function resize(){
        dpr = Math.min(window.devicePixelRatio || 1, 2);
        w = c.width = Math.floor(innerWidth * dpr);
        h = c.height = Math.floor(innerHeight * dpr);
        c.style.width = innerWidth + 'px';
        c.style.height = innerHeight + 'px';
        init();
      }
      function init(){
        const count = Math.max(40, Math.min(110, Math.floor((innerWidth * innerHeight) / 22000)));
        particles = new Array(count).fill(0).map(()=>({
          x: Math.random()*w, y: Math.random()*h,
          r: (Math.random()*1.6+0.6)*dpr,
          a: Math.random()*Math.PI*2,
          v: 0.12 + Math.random()*0.22,
          drift: (Math.random()*0.8+0.2) * (Math.random() < .5 ? -1 : 1),
          hue: 95 + Math.random()*40, // greenish range
          alpha: 0.22 + Math.random()*0.3
        }));
      }
      function tick(){
        if (!running) return;
        ctx.clearRect(0,0,w,h);
        for (const p of particles){
          p.a += 0.002 * p.drift;
          p.x += Math.cos(p.a) * p.v;
          p.y += Math.sin(p.a*0.8) * p.v * 0.8 + 0.15;
          // wrap
          if (p.x < -10) p.x = w+10; if (p.x > w+10) p.x = -10;
          if (p.y < -10) p.y = h+10; if (p.y > h+10) p.y = -10;

          const grad = ctx.createRadialGradient(p.x, p.y, 0, p.x, p.y, p.r*3.5);
          grad.addColorStop(0, `hsla(${p.hue}, 55%, 72%, ${p.alpha})`);
          grad.addColorStop(1, `hsla(${p.hue}, 55%, 72%, 0)`);

          ctx.fillStyle = grad;
          ctx.beginPath();
          ctx.arc(p.x, p.y, p.r*2.4, 0, Math.PI*2);
          ctx.fill();
        }
        requestAnimationFrame(tick);
      }

      window.addEventListener('resize', resize, { passive:true });
      resize(); tick();

      // Pause when not visible
      document.addEventListener('visibilitychange', ()=>{
        running = !document.hidden;
        if (running) tick();
      });
    })();

    /* ---------- Wizard modal logic ---------- */
    (function(){
      const dialog = document.getElementById('wizard');
      const openBtn = document.getElementById('openWizard');
      const closeBtn = document.getElementById('closeWizard');

      openBtn.addEventListener('click', ()=>{
        if (typeof dialog.showModal === 'function') {
          dialog.showModal();
        } else {
          // Fallback if <dialog> unsupported
          dialog.setAttribute('open','');
        }
      });
      closeBtn.addEventListener('click', ()=> dialog.close());
      dialog.addEventListener('click', (e)=>{
        const rect = dialog.getBoundingClientRect();
        const clickedInDialog = (
          e.clientX >= rect.left && e.clientX <= rect.right &&
          e.clientY >= rect.top && e.clientY <= rect.bottom
        );
        if (!clickedInDialog) dialog.close();
      });
      document.addEventListener('keydown', (e)=>{
        if (e.key === 'Escape' && dialog.open) dialog.close();
      });
    })();
  </script>
